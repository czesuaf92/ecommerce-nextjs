{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Launch Program",
        "skipFiles": ["<node_internals>/**"],
        "program": "${workspaceFolder}/node_modules/.bin/next",
        "args": ["dev"],
        "runtimeArgs": ["--inspect"],
        "console": "integratedTerminal"
      },
      {
        "type": "chrome",
        "request": "attach",
        "name": "Attach Chrome",
        "port": 9222,
        "url": "http://localhost:3000",
        "webRoot": "${workspaceFolder}"
      }
    ],
    "compounds": [
      {
        "name": "Next.js: full stack",
        "configurations": ["Launch Program", "Attach Chrome"]
      }
    ]
  }
